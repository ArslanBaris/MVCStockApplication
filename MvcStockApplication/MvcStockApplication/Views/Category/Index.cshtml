@using MvcStockApplication.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<a href="/Category/NewCategory/" class="btn btn-primary">Add New Category</a>
<p><br /></p>
<table class="table table-bordered">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td><a href="/Category/GetCategory/@category.CategoryId" class="btn btn-success">Update</a></td>
                <td><a href="/Category/DeleteCategory/@category.CategoryId" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))


